# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
max_line_length = 100

[**.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore
